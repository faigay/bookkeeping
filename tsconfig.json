{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": ["src", "bookkeeping/src/tests", "tests"],
  "exclude": ["node_modules", "dist"]
}
